[user]
	name = Steve Jarvis
	email = sajarvis@bu.edu
[color]
	ui = auto
[core]
    editor = emacs
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = current
[pack]
	window = 0
[alias]
	permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
[merge]
	tool = meld
[pull]
	rebase = false
[init]
	defaultBranch = main
